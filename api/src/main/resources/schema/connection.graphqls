# --- enum
enum ConnectionStatus {
    NotConnected
    Pending
    AwaitingResponse
    Connected
}

enum ConnectionRequestAction {
    Send
    Accept
    Reject
    Cancel
}

# --- type

type ConnectionState {
    status: ConnectionStatus!
}

# --- input

input ConnectionRequestInput {
    companyId: ID!
    action: ConnectionRequestAction!
    message: String
}
