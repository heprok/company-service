type Company {
    id: ID!
    name: String!
    website: Url!
    logo: Image
    about: String
    slug: String
    isTypePublic: Boolean
    country: String
    state: String
    city: String
    occupation: Occupation
    industry: Industry
    statistic: Statistic
    socialProfiles: [SocialProfile]
    keywords: [Keyword]
}

input CreateCompanyInput {
    name: String!
    website: Url!
}

input UpdateCompanyInput {
    id: ID!
    name: String
    website: Url
    logo: Upload
    about: String
    isTypePublic: Boolean
    country: String
    state: String
    city: String
    industryId: ID
    keyWordIds: [ID]
}
