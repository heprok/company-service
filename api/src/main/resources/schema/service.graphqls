type Service {
    id: ID!
    companyId: ID!
    name: String!
    price: Float
    image: Image
    verifiedUses: Int
    lastUsed: Date
}

type ServiceList implements PaginatedList {
    items: [Service]!
    totalItems: Int!
}

enum ServiceSortBy {
    Name, Created, Price, VerifiedUses, LastUsed
}

input ServiceSort{
    sortBy: ServiceSortBy!
    direction: SortDirection!
}

input ServiceFilter {
    cost: RangeFloat,
    lastUsed: RangeYear
}
